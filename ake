#!/usr/bin/env bash

main() {
  babel src --out-dir lib --copy-files -w
}

publish() {
  build
  npm publish --registry=https://registry.npmjs.org
  git commit -am 'publish'
  git push
  cnpm sync @gutenye/react-svg-loader
}

build() {
  npm run build
}

case "$1" in
  "" ) main ;;
  build ) build ;;
  publish ) publish ;;
esac
